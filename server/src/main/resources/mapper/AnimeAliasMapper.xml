<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="scratch.dao.inter.IAnimeAliasDao">

    <resultMap id="alisaList" type="AnimeAlias">
        <result property="hostId" column="hostId" />
        <collection property="names" ofType="String" javaType="java.util.ArrayList">
            <result column="alias" />
        </collection>
    </resultMap>
    

    <select id="find" resultMap="alisaList">
        select host_id as hostId, alias from anime_alias
        where anime_id = #{animeId} and host_id = #{hostId}
    </select>

    <select id="list" resultMap="alisaList">
        select host_id as hostId, alias from anime_alias
        where anime_id = #{animeId};
    </select>

    <insert id="save">
        insert into
        anime_alias(anime_id, host_id, alias) values
        <foreach item="animeAlias" collection="animeAliasList" separator=",">
            <foreach item="name" collection="animeAlias.names" separator=",">
                (#{animeId}, #{animeAlias.hostId}, #{name})
            </foreach>
        </foreach>
    </insert>


    <delete id="delete">
        delete from anime_alias
        where anime_id = #{animeId}
    </delete>

</mapper>
